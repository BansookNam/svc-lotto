<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/shadow_bg"
	app:layout_constraintVertical_chainStyle="packed"
	android:orientation="vertical">


	<EditText
		android:id="@+id/select_count_goal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="30dp"
		android:padding="15dp"
		android:inputType="number"
		android:hint="@string/select_count_hint"
		android:textColorHint="@color/gray"
		android:gravity="center"
		android:textStyle="bold"
		android:textColor="@color/white"
		app:layout_constraintVertical_chainStyle="packed"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/select_just_in_time"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:id="@+id/select_just_in_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/select_just_in_time"
		android:textSize="30dp"
		android:padding="15dp"
		android:background="@drawable/shape_round_bg"
		android:textColor="@color/white"

		app:layout_constraintTop_toBottomOf="@+id/select_count_goal"
		app:layout_constraintBottom_toTopOf="@id/select_sq"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />


	<TextView
		android:id="@+id/select_sq"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/select_sq"
		android:textSize="30dp"
		android:padding="15dp"
		android:background="@drawable/shape_round_bg"
		android:textColor="@color/white"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/select_just_in_time"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@id/select_thumb"
		app:layout_constraintEnd_toEndOf="parent" />


	<TextView
		android:id="@+id/select_thumb"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/select_thumb"
		android:textSize="30dp"
		android:padding="15dp"
		android:background="@drawable/shape_round_bg"
		android:textColor="@color/white"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/select_sq"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
